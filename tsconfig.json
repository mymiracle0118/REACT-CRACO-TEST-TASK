{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es5",
        "module": "commonjs",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "declaration": true,
        "noEmit": true,
        "paths": {
            "@craco/*": [
                "node_modules/@craco/*"
            ]
        }
    },
    "include": [
        "packages/**/*",
        "node_modules/@craco/types/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}